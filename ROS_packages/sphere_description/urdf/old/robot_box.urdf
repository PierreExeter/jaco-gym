<?xml version="1.0"?>
<robot name="robot_box">
  
  <!-- Base Link -->
  <link name="link1">
    <collision>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <inertial>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>

  <gazebo reference="link1">
    <material>Gazebo/Orange</material>
  </gazebo>
  
  </link>
</robot>